<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.MainPage">

    <ContentPage.Content>
        <!-- Layout for the page -->
        <VerticalStackLayout Padding="10">

            <!-- Add the Logout Button at the top -->
            <Button Text="Logout" 
                    HorizontalOptions="End"
                    Clicked="OnLogoutClicked"
                    BackgroundColor="Red" 
                    TextColor="White"/>
            
            <Button Text="Create New Asset" Clicked="OnCreateAssetClicked"/>


            <!-- ScrollView for asset details -->
            <ScrollView>
                <StackLayout x:Name="AssetsStackLayout" Padding="10">
                    <Label Text="Assets will be displayed here." 
                           x:Name="MessageLabel"
                           VerticalOptions="Center" 
                           HorizontalOptions="Center" 
                           FontSize="Medium" 
                           TextColor="Black"/>
                </StackLayout>
            </ScrollView>
        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>
